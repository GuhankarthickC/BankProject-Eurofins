@model BankProj.BankApplication.TransactionDetail

<form asp-controller="TransactionDetail" asp-action="Index" class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" name="id" aria-label="Search">
    <button id="myselection" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>
@if (Model.MadeBy == null)
{
    <h4 class="text-md-center">Kindly enter a valid Transaction ID</h4>
}
else if (Model.TransactionId == 0)
{
    <h4 class="text-md-center">Result Not Found</h4>

}
else
{
    <div class="myDiv">
        <h1>@Model.TransactionId,@Model.Date,@Model.MadeBy,@Model.MadeTo,@Model.TransactionAmount</h1>
    </div>
}
